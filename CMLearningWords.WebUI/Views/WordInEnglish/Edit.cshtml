@model UpdateWordInEnglishViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    //List<UpdateTranslationOfWordViewModel> currentTranslations = (List<UpdateTranslationOfWordViewModel>)Model.Translations;
}

<h2 class="mt-5">@ViewBag.HeadPageText</h2>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-antiforgery="true" asp-controller="WordInEnglish" asp-action="Edit" method="post" name="editWord">

            @Html.AntiForgeryToken()
            <input type="hidden" class="validation" asp-validation-summary="ModelOnly" />

            <div class="form-group">
                <input type="hidden" asp-for="Id" value="@Model.Id">
                <label asp-for="Name"></label>
                <input asp-for="Name" value="@Model.Name" class="form-control custom-control" required />
                <span asp-validation-for="Name" class="form-text text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StageOfMethodId"></label>
                <select asp-for="StageOfMethodId" asp-items="Model.StagesOfMethod" class="form-control custom-control" required></select>
                <span asp-validation-for="StageOfMethodId" class="form-text text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Translations[0].Name"></label>
                <div id="containerOfTranslations">
                    @for (int i = 0; i < Model.Translations.Count(); i++)
                    {
                        @if (i == 0)
                        {
                            <fieldset class="translationFiled" id="@i">
                                <input asp-for="@Model.Translations[i].Id" type="hidden" />
                                <input asp-for="@Model.Translations[i].WordInEnglishId" type="hidden" />
                                <input asp-for="@Model.Translations[i].Name" value="@Model.Translations[i].Name" additionalFiled="translationFiledinput" class="form-control custom-control translation-filed" required />
                                <span asp-validation-for="@Model.Translations[i].Name" spanField="validationSpan" class="form-text text-danger"></span>
                            </fieldset>
                        }
                        else
                        {
                            <fieldset class="translationFiled" id="@i">
                                <input asp-for="@Model.Translations[i].Id" type="hidden" />
                                <input asp-for="@Model.Translations[i].WordInEnglishId" type="hidden" />
                                <input asp-for="@Model.Translations[i].Name" value="@Model.Translations[i].Name" additionalFiled="translationFiledinput" class="form-control custom-control translation-filed" required />
                                <input type="button" data-id-element="@Model.Translations[i].Id" class="btn btn-danger delete-button" value="Удалить перевод">
                                <span asp-validation-for="@Model.Translations[i].Name" spanField="validationSpan" class="form-text text-danger"></span>
                            </fieldset>
                        }
                    }
                </div>
            </div>

            <input type="submit" value="Редактировать слово" class="btn btn-primary" />
            <a asp-controller="Home" asp-action="Index" class="btn btn-info">Назад</a>
        </form>
    </div>
</div>

