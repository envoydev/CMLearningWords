@model ListOfCreateTranslationOfWordSeparateViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    //List<CreateTranslationOfWordSeparateViewModel> translations = (List<CreateTranslationOfWordSeparateViewModel>)Model;
}

<h2 class="mt-5">@ViewBag.HeadPageText</h2>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-antiforgery="true" asp-controller="TranslationOfWord" asp-action="Create" method="post" name="createNewWord">

            @Html.AntiForgeryToken()
            <input type="hidden" class="validation" asp-validation-summary="ModelOnly" />

            <div class="form-group">
                <label style="font-weight: normal">Перевод для слова <b>@Model.WordInEnglish.Name</b> из <b>@Model.WordInEnglish.StageOfMethod.Name</b> </label>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Translations[0].Name"></label>
                <div id="containerOfTranslations">
                    <fieldset class="translationFiled">
                        <input asp-for="@Model.Translations[0].Name" additionalFiled="translationFiledinput" class="form-control custom-control translation-filed" required />
                        <span asp-validation-for="@Model.Translations[0].Name" spanField="validationSpan" class="form-text text-danger"></span>
                        <input asp-for="@Model.Translations[0].WordInEnglishId" additionalFiled="translationFiledinputHidden" value="@Model.WordInEnglish.Id" type="hidden" />
                    </fieldset>
                </div>
                <input type="button" name="addButton" value="Добавить еще один перевод" class="btn btn-success" id="add-separate-translation-button" />
            </div>

            <input type="submit" value="Добавить перевод" class="btn btn-primary" />
            <a asp-controller="Home" asp-action="Index" class="btn btn-info">Назад</a>
        </form>
    </div>
</div>

