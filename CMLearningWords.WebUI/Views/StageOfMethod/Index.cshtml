@model IEnumerable<StageOfMethod>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<StageOfMethod> stages = (List<StageOfMethod>)Model;
    int count = 1;
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-md-4">
                        <a asp-controller="Category" asp-action="Create" class="btn btn-info">Добавить стейдж</a>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                <table class="table">
                    <thead class="thead-inverse">
                        <tr>
                            <th>#</th>
                            <th>Название</th>
                            <th>Информация</th>
                            <th>Редактировать</th>
                            <th>Удалить</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (stages.Count > 0)
                        {
                            for (int i = 0; i < stages.Count; i++, count++)
                            {
                                <tr>
                                    <th>@count</th>
                                    <th>@stages[i].Name</th>
                                    <th><a asp-controller="StageOfMethod" asp-action="Details" asp-route-id="@stages[i].Id"><span class="glyphicon glyphicon-info-sign"></span></a></th>
                                    <th><a asp-controller="StageOfMethod" asp-action="Edit" asp-route-id="@stages[i].Id"><span class="glyphicon glyphicon-edit"></span></a></th>
                                    <th><a asp-controller="StageOfMethod" asp-action="Delete" asp-route-id="@stages[i].Id"><span class="glyphicon glyphicon-trash"></span></a></th>
                                </tr>
                            }
                        }
                        else
                        {
                            @Html.Partial("_NotFound")
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>