@model CreateStageOfMethodViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mt-5">@ViewBag.HeadPageText</h2>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-antiforgery="true" asp-controller="StageOfMethod" asp-action="Create" method="post">

            @Html.AntiForgeryToken()
            <input type="hidden" class="validation" asp-validation-summary="ModelOnly" />

            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control custom-control" required />
                <span asp-validation-for="Name" class="form-text text-danger"></span>
            </div>

            <input type="submit" value="Добавить стейдж" class="btn btn-primary" />
            <a asp-controller="StageOfMethod" asp-action="Index" class="btn btn-info">Назад</a>
        </form>
    </div>
</div>
